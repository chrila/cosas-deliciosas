<%= form_with(model: beer) do |form| %>
  <% if beer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
        <% beer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :brewery_id %>
    <%= form.select :brewery_id, breweries_for_select %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :beer_style_id %>
    <%= form.select :beer_style_id, beer_styles_for_select %>
  </div>

  <div class="field">
    <%= form.label :ibu, 'IBU' %>
    <%= form.number_field :ibu %>
  </div>

  <div class="field">
    <%= form.label :abv, 'ABV [%]' %>
    <%= form.number_field :abv, step: 0.1 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
