<h1>Beers</h1>

<table>
  <thead>
    <tr>
      <th>Brewery</th>
      <th>Name</th>
      <th>Beer style</th>
      <th>IBU</th>
      <th>ABV [%]</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.brewery %></td>
        <td><%= beer.name %></td>
        <td><%= beer.beer_style %></td>
        <td><%= beer.ibu %></td>
        <td><%= beer.abv %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer', new_beer_path %>
