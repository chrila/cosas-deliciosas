<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Brewery</th>
      <th scope="col">Name</th>
      <th scope="col">Beer style</th>
      <th scope="col">IBU</th>
      <th scope="col">ABV [%]</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.brewery %></td>
        <td><%= beer.name %></td>
        <td><%= beer.beer_style %></td>
        <td><%= beer.ibu %></td>
        <td><%= beer.abv %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Beer', new_beer_path, class: "btn btn-primary", method: :get %>
