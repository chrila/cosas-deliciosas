<%= form_with(model: tasting) do |form| %>
  <% if tasting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tasting.errors.count, "error") %> prohibited this tasting from being saved:</h2>

      <ul>
        <% tasting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :beer_id %>
    <%= form.select :beer_id, beers_for_select, {}, class: "custom-select" %>
  </div>

  <div class="form-group">
    <%= form.label :place %>
    <%= form.text_field :place, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :currency_id %>
    <%= form.select :currency_id, currencies_for_select, {}, class: "custom-select" %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.text_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :serving_format_id %>
    <%= form.select :serving_format_id, serving_formats_for_select, {}, class: "custom-select" %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
